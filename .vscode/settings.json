{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "files.trimTrailingWhitespace": true,
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vortizhe.simple-ruby-erb"
  },
  "[erb]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },
  "files.associations": {
    "*.html.erb": "erb",
    "*.erb": "erb"
  }
}